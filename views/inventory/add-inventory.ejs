<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>


  <div class="rese1">
    <form action="/inv/add-inventory" method="post">
            <div class="rese2"><i>All fields are required!</i></div>
          <br>
            <label for="classification_id">Classification</label>
    
            <%- classification %>
    
            <label for="inv_make">Make</label>
            <input type="text" name="inv_make" id="inv_make" required placeholder="Min of 3 characters" value="<%= locals.inv_make %>">
    
            <label for="inv_model">Model</label>
            <input type="text" name="inv_model" id="inv_model" required placeholder="Min of 3 characters" value="<%= locals.inv_model %>">
    
            <label for="inv_description">Description</label>
            <textarea name="inv_description" id="inv_description" cols="30" rows="10" required placeholder="Min of 3 characters" ><%= locals.inv_description %></textarea>
    
            <label for="inv_image">Image Path</label>
            <input type="text" name="inv_image" id="inv_image" required value="/images/vehicles/no-image.png">
            
            <label for="inv_thumbnail">Thumbnail Path</label>
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="/images/vehicles/no-image.png">
    
            <label for="inv_price">Price</label>
            <input type="text" name="inv_price" id="inv_price" required placeholder="Whole and decimal numbers" pattern="[0-9]+(\.[0-9]+)?" title="Whole and decimal numbers only, no spaces" value="<%= locals.inv_price %>">
    
            <label for="inv_year">Year</label>
            <input type="number" name="inv_year" id="inv_year" required min="1000" max="9999" placeholder="4-digit year" value="<%= locals.inv_year %>">
    
            <label for="inv_miles">Miles</label>
            <input type="number" name="inv_miles" id="inv_miles" required placeholder="digits only" pattern="[0-9]+" title="Whole numbers only, no spaces & decimals" value="<%= locals.inv_miles %>">
    
            <label for="inv_color">Color</label>
            <input type="text" name="inv_color" id="inv_color" required placeholder="Min of 3 characters"  value="<%= locals.inv_color %>">
             <div class="pasi1">
            <button type="submit">Add</button>
              </div>
              </div>
              <script src="/js/script.js"></script>
    </form>